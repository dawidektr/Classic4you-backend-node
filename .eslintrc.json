{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "es2021": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "no-console": "off",
        "consistent-return": 2,
        "indent": [
            1,
            4
        ],
        "no-else-return": 1,
        "semi": [
            1,
            "always"
        ],
        "space-unary-ops": 2,
        "no-multiple-empty-lines": ["warning", { "max": 2, "maxEOF": 0 }]
    },
    "globals": {
        "require": true,
        "process": true
    }
}